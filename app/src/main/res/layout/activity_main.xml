<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jc.yangj.MainActivity"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本软件作者向你保证，绝对不包含病毒，不会后台下载和安装其他应用！" />

    <Switch
        android:id="@+id/main_isserviceopen_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="[胖佶红包]抢红包服务"
        android:textOn="已开启"
        android:textOff="已关闭" />
    
    <Switch
        android:id="@+id/main_isselfopen_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="是否抢自己的红包"
       	android:checked="true"
        android:textOn="抢"
        android:textOff="不抢" />

    <Switch
        android:id="@+id/main_ispageopen_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="是否在页面抢红包"
       	android:checked="true"
        android:textOn="抢"
        android:textOff="不抢" />
    
	<Switch
        android:id="@+id/main_issound_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="抢到红包是否有铃声提示"
       	android:checked="true"
        android:textOn="提示"
        android:textOff="不提示" />
	
	<Switch
        android:id="@+id/main_isvibratorh_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="抢到红包是否有震动提示"
       	android:checked="true"
        android:textOn="提示"
        android:textOff="不提示" />

	<Switch
	    android:id="@+id/main_havenoperson_switch"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="20dp"
	    android:checked="false"
	    android:text="是否开启无人模式"
	    android:textOff="不开启"
	    android:textOn="开启" />

	<Button
	    android:id="@+id/main_update_btn"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:layout_marginTop="20dp"
	    android:enabled="false"
	    android:text="更新" />
    
</LinearLayout>
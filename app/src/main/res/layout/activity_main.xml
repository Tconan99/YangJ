<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jc.yangj.MainActivity"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本软件作者向你保证，绝对不包含病毒，不会后台下载和安装其他应用！" />

    <Switch
        android:id="@+id/main_isserviceopen_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="[胖佶红包]抢红包服务"
        android:textOn="已开启"
        android:textOff="已关闭" />

	<Switch
	    android:id="@+id/main_havenoperson_switch"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="20dp"
	    android:checked="false"
	    android:text="是否开启无人模式"
	    android:textOff="不开启"
	    android:textOn="开启" />

	<Switch
		android:id="@+id/main_neednotify_switch"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:checked="false"
		android:text="是否有提醒"
		android:textOff="不开启"
		android:textOn="开启" />

	<Button
	    android:id="@+id/main_update_btn"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:layout_marginTop="20dp"
	    android:enabled="false"
	    android:text="更新" />

    <Button
        android:id="@+id/main_tips_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
		android:visibility="gone"
        android:text="提示" />
    
</LinearLayout>